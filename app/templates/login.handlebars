<div class="login_wrap">
	<div class="login_icons">{{{icons}}}</div>
	<div class="login_gradient"></div>

	<div class="login_logo"></div>

	<form class="login_form">
		<div class="login_form-box">
			<input class="login_form-input login_form-input--email" type="email" placeholder="{{string 'login.email.placeholder'}}" required />
			<input class="login_form-input login_form-input--password" type="password" placeholder="{{string 'login.password.placeholder'}}" required />
		</div>

		<button type="submit" class="button login_submit">{{string 'login.submit.text'}}</button>

		<div class="login_minilinks">
			<a href="{{string 'login.forgotPassword.url'}}">{{string 'login.forgotPassword.text'}}</a>
		</div>
	</form>
</div>
<div class="login_footer">
	&copy; {{year}} <a href="{{string 'login.website.url'}}">{{string 'login.website.text'}}</a> |
	<a href="{{string 'login.help.url'}}">{{string 'login.help.text'}}</a>
</div>