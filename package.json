{
	"name": "@dwimm/client-web",
	"description": "DWIMM Web Client",
	"main": "./app/index.js",
	"scripts": {
		"check": "npm run check:eslint && npm run check:npm && npm run check:nsp",
		"check:quick": "npm run check:eslint",
		"check:eslint": "eslint ./",
		"check:nsp": "nsp check || true",
		"check:npm": "npm-check -s",
		"visualize": "plato -rt dwimm-client-web -d ./code-visualization -e \".eslintrc.json\" ./app/js/**/*.js",
		"build": "npm run build:production",
		"build:production": "PRODUCTION=1 grunt --production",
		"build:dev": "grunt dev",
		"bump:reset": "export MODULEVERSION=$(npm view @dwimm/client-web version) && npm run bump:reset:save",
		"bump:reset:next": "export MODULEVERSION=$(npm view @dwimm/client-web@next version) && npm run bump:reset:save",
		"bump:reset:save": "grunt setVersion --value=${MODULEVERSION}",
		"bump:develop": "npm run bump:reset:next && npm --no-git-tag-version version prerelease",
		"bump:production": "npm run bump:reset && npm --no-git-tag-version version from-git"
	},
	"author": "Sebastian Pekarek <bugs@sebbo.net>",
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.3",
		"babel-polyfill": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"babelify": "^8.0.0",
		"eslint": "^4.18.1",
		"eslint-plugin-security": "^1.4.0",
		"grunt": "^1.0.2",
		"grunt-browser-sync": "^2.2.0",
		"grunt-browserify": "^5.2.0",
		"grunt-contrib-clean": "^1.1.0",
		"grunt-contrib-copy": "^1.0.0",
		"grunt-contrib-cssmin": "^2.2.1",
		"grunt-contrib-htmlmin": "^2.4.0",
		"grunt-contrib-watch": "^1.0.0",
		"grunt-replace": "^1.0.1",
		"grunt-sass": "^2.1.0",
		"handlebars": "^4.0.11",
		"hbsfy": "^2.8.1",
		"npm-check": "^5.5.2",
		"nsp": "^3.2.1",
		"plato": "^1.7.0",
		"stringify": "^5.2.0",
		"uglifyify": "^4.0.5"
	},
	"dependencies": {
		"backbone": "^1.3.3",
		"counterpart": "^0.18.5",
		"gravatar-url": "^2.0.0",
		"jquery": "^3.3.1",
		"moment": "^2.20.1",
		"numbro": "^2.0.5",
		"qrcode-svg": "^1.0.0",
		"raven-js": "^3.22.3",
		"socket.io-client": "^2.0.4",
		"underscore": "^1.8.3"
	}
}
